<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://browseCaption"
        focusComponent="buildingsTable"
        messagesPack="com.magenta.samara.eco.web.screens.building">
    <data readOnly="true">
        <collection id="buildingsDc"
                    class="com.magenta.samara.eco.entity.Building"
                    view="building-view_2">
            <loader id="buildingsDl">
                <query>
                    <![CDATA[select e from eco_Building e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="buildingsTable"
            spacing="true">
        <filter id="filter"
                applyTo="buildingsTable"
                dataLoader="buildingsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="buildingsTable"
                    width="100%"
                    dataContainer="buildingsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="description">
                </column>
                <column id="organizations">
                </column>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="buildingsTable.create"/>
                <button id="editBtn" action="buildingsTable.edit"/>
                <button id="removeBtn" action="buildingsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
