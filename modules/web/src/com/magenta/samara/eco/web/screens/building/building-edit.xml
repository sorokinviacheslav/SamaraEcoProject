<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="com.magenta.samara.eco.web.screens.building">
    <data>
        <instance id="buildingDc"
                  class="com.magenta.samara.eco.entity.Building"
                  view="building-view_2">
            <loader/>
        </instance>
        <collection id="organizationsDc"
                  class="com.magenta.samara.eco.entity.Organization"
                  view="_local">
            <loader id="buildingsDl">
                <query>
                    <![CDATA[select e from eco_Organization e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="buildingDc">
            <column width="250px">
                <textField id="descriptionField" property="description"/>
                <checkBoxGroup optionsContainer="organizationsDc" property="organizations"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
