<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://browseCaption"
        focusComponent="organizationsTable"
        messagesPack="com.magenta.samara.eco.web.screens.organization">
    <data readOnly="true">
        <collection id="organizationsDc"
                    class="com.magenta.samara.eco.entity.Organization"
                    view="organization-view">
            <loader id="organizationsDl">
                <query>
                    <![CDATA[select e from eco_Organization e]]>
                    <condition>
                        <and>
                            <c:jpql>
                                <c:where>e.date=:component_dateField</c:where>
                            </c:jpql>
                            <c:jpql>
                                <c:where>e.inn=:component_innField1</c:where>
                            </c:jpql>
                        </and>
                    </condition>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <dialogMode height="600"
                width="800"/>
    <layout expand="hBox"
            spacing="true">
        <filter id="filter"
                applyTo="organizationsTable"
                dataLoader="organizationsDl">
            <properties include=".*"/>
            <custom name="name"
                    caption="Find by name"
                    paramClass="java.lang.String">
                lower({E}.name) like concat('%', ?, '%')
            </custom>
            <custom name="building"
                    caption="Find by address"
                    paramClass="java.lang.String"
            join="join {E}.buildings b}">
                lower(b.address.street.name) like concat('%', ?, '%') or upper(b.address.street.name) like concat('%', ?, '%') or b.address.street.name like concat('%', ?, '%')
            </custom>
        </filter>
        <textArea id="testTextArea"></textArea>
        <hbox id="hBox" spacing="true" margin="true" height="100%">
            <vbox id="vBox1" spacing="true" margin="true" width="100%">
        <groupTable id="organizationsTable"
                    width="100%"
                    height="100%"
                    dataContainer="organizationsDc"
        align="TOP_LEFT">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns includeAll="true" exclude="buildings">
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="organizationsTable.create"/>
                <button id="editBtn" action="organizationsTable.edit"/>
                <button id="removeBtn" action="organizationsTable.remove"/>
            </buttonsPanel>
        </groupTable>
            </vbox>
        <vbox id="vBox2" spacing="true" margin="true" width="100%">
            <datePicker id="datePicker"
                        dataContainer="organizationsDc"
                        property="date"
                        editable="false"/>
            <groupBox caption="Быстрые фильтры" collapsable="true">
                <form id="filtersForm">
                    <dateField id="dateField" caption="Дата"/>
                    <textField id="innField1" caption="ИНН"/>
                </form>
            </groupBox>
        </vbox>
        </hbox>
        <hbox id="lookupActions" spacing="true" visible="false" width="100%">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
