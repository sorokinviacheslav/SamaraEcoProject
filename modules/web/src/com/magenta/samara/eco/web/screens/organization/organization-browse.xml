<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://browseCaption"
        focusComponent="organizationsTable"
        messagesPack="com.magenta.samara.eco.web.screens.organization">
    <data readOnly="true">
        <collection id="organizationsDc"
                    class="com.magenta.samara.eco.entity.Organization"
                    view="organization-view">
            <loader id="organizationsDl">
                <query>
                    <![CDATA[select e from eco_Organization e]]>
                 </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <dialogMode height="600"
                width="800"/>
    <layout expand="hBox"
            spacing="true">
        <hbox id="hBox" spacing="true" height="100%" width="100%">
                <groupTable id="organizationsTable"
                    width="100%"
                    height="100%"
                    dataContainer="organizationsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
                <action id="lookupBuildings" caption="Здания"/>
            </actions>
            <columns includeAll="true" exclude="buildings">
            </columns>
            <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn" action="organizationsTable.create"/>
                        <button id="editBtn" action="organizationsTable.edit"/>
                        <button id="removeBtn" action="organizationsTable.remove"/>
                        <popupButton id="popupButton" caption="Связанные записи" enable="false">
                            <actions>
                                <action id="organizationsTable.lookupBuildings"/>
                            </actions>
                        </popupButton>
                    </buttonsPanel>
        </groupTable>
        <vbox id="vBox2" spacing="true" width="100%">
            <datePicker id="datePicker"
                        dataContainer="organizationsDc"
                        property="date"
                        editable="false"/>
            <groupBox id="filter" collapsable="true" width="300px" caption="Быстрые фильтры" height="AUTO">
                <vbox spacing="true">
                    <label value="Дата"/>
                    <dateField id="dateField"/>
                    <buttonsPanel>
                        <button id="apply" caption="Применить"/>
                        <button id="clear" caption="Сбросить"/>
                    </buttonsPanel>
                </vbox>
            </groupBox>
            <groupBox id="group" collapsable="true" width="300px" caption="Быстрые группировки" height="AUTO">
                <vbox spacing="true">
                    <checkBox id="descr" caption="Описание"/>
                    <checkBox id="date" caption="Дата"/>
                    <buttonsPanel>
                        <button id="apply1" caption="Применить"/>
                        <button id="clear1" caption="Сбросить"/>
                    </buttonsPanel>
                </vbox>
            </groupBox>
        </vbox>
        </hbox>
        <hbox id="lookupActions" spacing="true" visible="false" width="100%">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
